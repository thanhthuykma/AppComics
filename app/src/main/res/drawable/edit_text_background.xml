<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền -->
    <solid android:color="#F2F2F2" />

    <!-- Viền -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Góc bo tròn -->
    <corners android:radius="8dp" />

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
