<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/white">

    <!-- Toolbar với nút Back -->

    <!-- Ảnh bìa truyện -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F7841E"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Thông tin truyện"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            ></TextView>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/img_story_cover"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop" />

    <!-- Tên truyện -->
    <TextView
        android:id="@+id/tv_story_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Truyện"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Tác giả -->
    <TextView
        android:id="@+id/tv_story_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tác Giả: Người Tạo"
        android:textColor="#757575"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp" />

    <!-- Thể loại -->
    <TextView
        android:id="@+id/tv_story_genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thể loại: Hành động, Phiêu lưu"
        android:textColor="#757575"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Nội dung truyện -->
    <TextView
        android:id="@+id/tv_story_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nội dung truyện: Đoạn giới thiệu ngắn gọn về câu chuyện, kể về nhân vật chính và các sự kiện quan trọng diễn ra trong truyện. Điều này giúp người đọc nắm bắt được nội dung và thể loại của câu chuyện."
        android:textColor="#333333"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:gravity="start|top"
        android:maxLines="5"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:textAlignment="textStart"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"/>

    <!-- Nút Đọc Truyện -->
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/btn_doctruyen"
        android:layout_gravity="center"
        android:text="Đọc truyện"
        android:textSize="20dp"/>
</LinearLayout>
